<tr id= "question_group_<%= question_group.id %>">
  <td>
    <% if can_administer? %>
     <h4><%= link_to question_group.name, question_group_questions_path(question_group) %></h4>
    <% else %>
      <%= question_group.name %>
    <% end %>
  </td>
  <td>
    <ul class="horizontal-list">
      <li><%= link_to "Access Survey", new_question_group_answer_group_path(question_group) %></li>
      <% if can_administer? %>
        <li><%= link_to "Edit Questions", question_group_questions_path(question_group) %></li>
        <li><%= link_to "Results", [:results, question_group] %></li>
        <li><%= link_to "Delete", [question_group], method: :delete %></li>
      <% end %>
    </ul>
  </td>
</tr>
